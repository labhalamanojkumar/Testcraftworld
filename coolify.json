{
  "services": [
    {
      "name": "testcraft",
      "type": "application",
      "source": {
        "type": "github",
        "repository": "https://github.com/labhalamanojkumar/Testcraft",
        "branch": "main",
        "auto_deploy": true
      },
      "build": {
        "type": "docker",
        "dockerfile": "Dockerfile"
      },
      "ports": [
        {
          "target": "${{PORT}}",
          "published": "${{PORT}}",
          "protocol": "tcp"
        }
      ],
      "environment": {
        "NODE_ENV": "production",
        "PORT": "${{PORT}}",
        "SESSION_SECRET": "${{SESSION_SECRET}}",
        "SUPER_ADMIN_USERNAME": "${{SUPER_ADMIN_USERNAME}}",
        "SUPER_ADMIN_PASSWORD": "${{SUPER_ADMIN_PASSWORD}}",
        "# Database (recommended)": "",
        "DATABASE_URL": "${{DATABASE_URL}}",
        "DB_HOST": "${{DB_HOST}}",
        "DB_PORT": "${{DB_PORT}}",
        "DB_USER": "${{DB_USER}}",
        "DB_PASSWORD": "${{DB_PASSWORD}}",
        "DB_NAME": "${{DB_NAME}}",
        "# Optional: S3 / object storage for uploads": "",
        "AWS_ACCESS_KEY_ID": "${{AWS_ACCESS_KEY_ID}}",
        "AWS_SECRET_ACCESS_KEY": "${{AWS_SECRET_ACCESS_KEY}}",
        "AWS_REGION": "${{AWS_REGION}}",
        "S3_BUCKET": "${{S3_BUCKET}}",
        "# Optional: other provider keys (eg. CLOUDINARY)": "",
        "CLOUDINARY_URL": "${{CLOUDINARY_URL}}"
      },
      "healthcheck": {
        "type": "http",
        "path": "/health",
        "port": "${{PORT}}",
        "interval": 30,
        "timeout": 10,
        "retries": 3
      },
      "domains": [
        {
          "name": "testcraft",
          "type": "generated"
        }
      ]
    }
  ]
}