{
  "services": [
    {
      "name": "testcraft",
      "type": "application",
      "source": {
        "type": "github",
        "repository": "https://github.com/labhalamanojkumar/Testcraft",
        "branch": "main",
        "auto_deploy": true
      },
      "build": {
        "type": "docker",
        "dockerfile": "Dockerfile"
      },
      "ports": [
        {
          "target": "${{PORT}}",
          "published": "${{PORT}}",
          "protocol": "tcp"
        }
      ],
      "environment": {
        "NODE_ENV": "production",
        "PORT": "${{PORT}}",
        "SESSION_SECRET": "${{SESSION_SECRET}}",
        "SUPER_ADMIN_USERNAME": "${{SUPER_ADMIN_USERNAME}}",
        "SUPER_ADMIN_PASSWORD": "${{SUPER_ADMIN_PASSWORD}}"
      },
      "healthcheck": {
        "type": "http",
        "path": "/health",
        "port": "${{PORT}}",
        "interval": 30,
        "timeout": 10,
        "retries": 3
      },
      "domains": [
        {
          "name": "testcraft",
          "type": "generated"
        }
      ]
    }
  ]
}